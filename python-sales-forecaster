# main.py
import pandas as pd
from sklearn.linear_model import LinearRegression
from sklearn.model_selection import train_test_split
import joblib

def forecast_sales(csv_file):
    df = pd.read_csv(csv_file)
    X = df[['month', 'ads_spent']]  # Assume columns: month, ads_spent, sales
    y = df['sales']
    
    X_train, X_test, y_train, y_test = train_test_split(X, y, test_size=0.2)
    model = LinearRegression()
    model.fit(X_train, y_train)
    
    joblib.dump(model, 'forecaster.pkl')
    accuracy = model.score(X_test, y_test)
    print(f"Model Accuracy: {accuracy:.2f}")
    
    pred = model.predict([[12, 5000]])  # Next month example
    print(f"Predicted Sales: â‚¹{pred[0]:,.0f}")

if __name__ == "__main__":
    forecast_sales('sales_data.csv')
