# main.py
import random
import string
import zxcvbn  # For strength check

def generate_password(length=12, symbols=True):
    chars = string.ascii_letters + string.digits
    if symbols:
        chars += string.punctuation
    pw = ''.join(random.choice(chars) for _ in range(length))
    print(f"Generated: {pw}")
    return pw

def check_strength(pw):
    strength = zxcvbn.zxcvbn(pw)
    score = strength['score']  # 0-4
    print(f"Strength: {'Weak' if score < 2 else 'Strong'} (Score: {score}/4)")
    return score

if __name__ == "__main__":
    pw = generate_password(16)
    check_strength(pw)
